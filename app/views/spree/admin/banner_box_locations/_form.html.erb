<div data-hook="admin_banner_box_form_fields" class="row">
  <div class="left eight columns alpha" data-hook="admin_banner_box_form_left">
    <%= f.field_container :location do %>
        <%= f.label :location, raw(t(:location) + content_tag(:span, ' *', :class => 'required')) %>
        <%= f.text_field :location, :class => 'fullwidth title' %>
        <%= f.error_message_on :location %>
    <% end %>

  </div>

  <div class="right eight columns omega" data-hook="admin_banner_box_form_right">

    <%= f.field_container :page do %>
        <%= f.label :page, raw(t(:page) + content_tag(:span, ' *', :class => 'required')) %>
        <%= f.text_field :page, :class => 'fullwidth title' %>
        <%= f.error_message_on :page %>
    <% end %>

  </div>

  <div class="clear"></div>

  <div data-hook="admin_banner_box_form_additional_fields"></div>

  <div class="clear"></div>
</div>