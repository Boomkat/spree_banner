
<%= render :partial => 'spree/admin/shared/banner_box_sub_menu' %>
<% content_for :page_title do %>
    <%= t(:new_banner_location) %>
<% end %>

<% content_for :page_actions do %>
    <li><%= button_link_to t(:back_to_banner_location_list), :admin_banner_box_locations, :icon => 'icon-arrow-left' %></li>
<% end %>


<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @banner_box } %>

<%= form_for [:admin, @banner_box_location], :html => { :multipart => true } do |f| %>
    <fieldset data-hook="new_banner_box">
      <legend align="center"><%= t(:new_banner_location) %></legend>
      <%= render :partial => 'form', :locals => { :f => f } %>
      <%= render :partial => 'spree/admin/shared/new_resource_links' %>
    </fieldset>
<% end %>
